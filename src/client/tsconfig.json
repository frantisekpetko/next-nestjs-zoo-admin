{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "app",
    "components",
    "pages",
    "../server/common",
    "../../.next/types/**/*.ts",
    "xxx"
  ],
  "exclude": [
    "node_modules"
  ]
}
